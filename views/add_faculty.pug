extends layout

block content
    h1 #{title}
    form(method='POST', action='/faculties/add')
        #form-group
            label Name:
            input.form-control(name='name', type='text')
        #form-group
            label Department:
            input.form-control(name='department', type='text')
        #form-group
            label Salary:
            input.form-control(name='salary', type='text')
        #form-group
            label City:
            input.form-control(name='city', type='text')
        br
        input.btn.btn-primary(type='submit', value='Submit')



